    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension (Dev Mode)",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "preLaunchTask": "npm: compile",
            "env": {
                "ANYRAG_DEV_MODE": "1",
                "ANYRAG_DEV_SOURCE": "/home/phil/git/AnyRAG"
            }
        },
        {
            "name": "Run Extension (Production)",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "preLaunchTask": "npm: compile"
        }
    ]
}